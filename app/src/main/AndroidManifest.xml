<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hk.meditechadmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera" />
    <uses-permission android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PrescriptionViewActivity"></activity>
        <activity android:name=".GuideLineActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DocumentViewActivity" />
        <activity android:name=".PhoneUpdateActivity" />
        <activity
            android:name=".PatientActivity"
            android:label="@string/title_activity_patient" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".OTpVerifyActivity" />
        <activity android:name=".PhoneNoActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>